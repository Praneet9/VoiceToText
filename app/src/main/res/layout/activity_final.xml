<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_final"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/layoutcolor"
    tools:context="com.ngo.voicetotext.Final">

    <Button
        android:text="New Interview"
        android:textStyle="bold"
        android:background="@drawable/buttonrectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:backgroundTint="#C5CAE9"
        android:id="@+id/newInterviewButton"
        android:onClick="newInterviewClicked"
        android:layout_below="@+id/listviewButton"
        android:layout_alignLeft="@+id/listviewButton"
        android:layout_alignStart="@+id/listviewButton" />

    <Button
        android:text="View Profiles"
        android:textStyle="bold"
        android:background="@drawable/buttonrectangle"
        android:backgroundTint="#C5CAE9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/listviewButton"
        android:onClick="listviewClicked"
        android:layout_below="@+id/openFileButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Open File"
        android:textStyle="bold"
        android:background="@drawable/buttonrectangle"
        android:backgroundTint="#C5CAE9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="121dp"
        android:id="@+id/openFileButton"
        android:onClick="openFileClicked"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
