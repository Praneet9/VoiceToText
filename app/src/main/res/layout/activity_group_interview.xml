<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_group_interview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/layoutcolor"
    tools:context="com.ngo.voicetotext.GroupInterview">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="15"
        android:hint="Eg  -  Virat Kohli"
        android:textStyle="italic"
        android:textColorHint="#CFD8DC"
        android:textSize="20sp"
        android:layout_marginTop="18dp"
        android:id="@+id/nameEditText"
        android:layout_below="@+id/nameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Full Name :"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTextView"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Gender :"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/nameEditText"
        android:id="@+id/genderTextView" />

    <CheckBox
        android:text="Male"
        android:textColor="#CFD8DC"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genderTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/maleCheckBox"
        android:onClick="maleBoxClicked" />

    <CheckBox
        android:text="Female"
        android:textColor="#CFD8DC"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/maleCheckBox"
        android:layout_toRightOf="@+id/genderTextView"
        android:layout_toEndOf="@+id/genderTextView"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/femaleCheckBox"
        android:checked="false"
        android:onClick="femaleBoxClicked" />

    <TextView
        android:text="Age :"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/ageTextView"
        android:layout_below="@+id/maleCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Eg  -  35"
        android:textStyle="italic"
        android:background="@android:color/transparent"
        android:ems="15"
        android:textSize="20sp"
        android:textColorHint="#CFD8DC"
        android:id="@+id/ageEditText"
        android:layout_below="@+id/ageTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="Contact :"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/contactTextView"
        android:layout_below="@+id/ageEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:background="@android:color/transparent"
        android:ems="15"
        android:hint="Eg  -  8097******"
        android:textStyle="italic"
        android:textColorHint="#CFD8DC"
        android:textSize="20sp"
        android:layout_below="@+id/contactTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/contactEditText" />


    <Button
        android:text="Set Details"
        android:textStyle="bold"
        android:background="@drawable/buttonrectangle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/setDetailsButton"
        android:onClick="setDetailsClicked"
        android:backgroundTint="#C5CAE9"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/contactEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <Button
        android:text="Add Patient"
        android:textStyle="bold"
        android:background="@drawable/buttonrectangle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#C5CAE9"
        android:id="@+id/addButton"
        android:onClick="addPatientClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/setDetailsButton"
        android:layout_alignStart="@+id/setDetailsButton" />

    <Button
        android:text="-->"
        android:textSize="20sp"
        android:background="@drawable/buttonrectangle"
        android:backgroundTint="#C5CAE9"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:id="@+id/nextButton"
        android:elevation="24dp"
        android:onClick="nextButtonClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Refresh"
        android:textStyle="bold"
        android:background="@drawable/buttonrectangle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#C5CAE9"
        android:id="@+id/refreshButton"
        android:onClick="refreshButtonClicked"
        android:layout_alignBaseline="@+id/setDetailsButton"
        android:layout_alignBottom="@+id/setDetailsButton"
        android:layout_alignLeft="@+id/nextButton"
        android:layout_alignStart="@+id/nextButton" />

</RelativeLayout>
